{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": true,
  "coverageDirectory": "test-out",
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts}", "!**/node_modules/**", "!**/vendor/**"]
}
